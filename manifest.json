{
  "manifest_version": 2,
  "name": "Alok Tools",
  "version": "0.1",
  "author":"Alok Shrestha",
  "background": {
    "scripts": ["alok_menus.js"]
  },
  "description": "Several Useful Utilities",
  "icons": {
    "16": "panda-with-glasses-small.png",
    "128": "panda-with-glasses.png"
  },
  "permissions": ["contextMenus", "tabs","clipboardWrite","activeTab"],
   "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"]
    }
  ]
}